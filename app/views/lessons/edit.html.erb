<h1>Edit a Lesson</h1>

<%= form_with(model: @lesson) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :topic%>
    <%= f.text_field :topic %><br>
    <%= f.label :content %>
    <%= f.text_field :content %><br>
    
    <%= f.submit 'Update Lesson' %>
<% end %>

<%= link_to 'Delete Lesson', lesson_path, method: 'delete' %>