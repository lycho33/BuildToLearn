<h1>Sign Up</h1>

<%= form_with(model: @user, url: signup_path)  do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :email %>
    <%= f.email_field :email %><br><br>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <%= f.submit "Create Account" %>
<% end %>


<%= link_to 'Home', root_path%>